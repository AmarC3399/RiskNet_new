<div class="analysis-wrapper" loading=""
     urls="^/api/.*/.*/(activities|violations|allocated_comments|authorisations|journals).*$">
  <div ui-view="analysis-view" id="analysis-view"></div>
</div>









    <div gridster>
      <ul id="alert-gridster-list" class="resize-grid">
        <li gridster-item id="{{item.id}}"  row="item.position[1]" col="item.position[0]" size-x="item.size.x" size-y="item.size.y" class="section gridster-item" ng-repeat="item in vars.gridsterItems">
          <div class="gridster-content" ui-view="{{item.ui}}"></div>
        </li>
      </ul>
    </div>
  </div>

  <div class="action-bar primary full-page">
    <div ui-view="menu-bar-view"></div>
    <ul>
  <li id="alert-add-reminder" required-user role="admin, user">
    <!-- ngIfs to remove from DOM for help text -->
    <a id="open_set_reminder" class="button neutral"
       ng-if="!alertBase.reminderDetails || alertBase.reminderDetails.cleared === true"
       ng-class="(!alertBase.reminder.alert_id) ? 'disabled' : ''"
       ng-click="(!alertBase.reminder.alert_id) || openReminder()" ng-model="alertBase.reminder.details">
      <span><%= t('alerts.menu_bar.Set_A_reminder') %></span>
    </a>
    
  </li>
  <li required-user role="admin, user">
    <a id="alert-forward" class="button" ng-disabled="!alertBase.reminder.alert_id"
       ng-class="(!alertBase.reminder.alert_id) ? 'disabled' : ''"
       ng-click="(!alertBase.reminder.alert_id) || openForwardAlert()">
      <span><%= t('alerts.menu_bar.forward_the_alert') %></span>
    </a>
  </li>
  <li>
    <a id="alert-examine" class="button" ng-disabled="!alertBase.reminder.alert_id"
       ng-class="(!alertBase.reminder.alert_id) ? 'disabled' : ''"
       ng-click="(!alertBase.reminder.alert_id) || openConfirmation()">
      <span><%= t('alerts.menu_bar.mark_as_examined') %></span>
    </a>
  </li>
</ul>
  </div>
  <div id="page-footer" ng-controller="AlertStatsCtrl" ng-if="alertBase.alertVisible">
    <ul>
      <li id="user"><p><%= t('alerts.index.user') %> Current User: <%= current_user.email %></p></li>
      <li id="alerts-pending"><p>Alerts Allocated pending:20</p></li>
      <li id="alerts-examined"><p>Alerts Examined: 0</p></li>
      <li id="alerts-total"><p>Total Alerts:22</p></li>
      <li><p>19/04/2023 09:50</p></li>
    </ul>
  </div>
</div>

