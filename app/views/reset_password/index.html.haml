<div id="wrapper" class="smartscore login">
  <div id="login-menu-options" style="box-shadow:none;" ui-keypress="{13:'login()'}" ng-submit="login()">
    <h2 style="text-align:center;"><%= t('reset.reset_password') %></h2>
    <p ng-show="!resetError" ng-if="resetBase.fromState==='login'" style="color: #fff;text-align: center;"><%=
      t('reset.password_expired') %></p>
    <p ng-show="!resetError" ng-if="resetBase.fromState!=='login'" style="color: #fff;text-align: center;"><%=
      t('reset.password_changed') %></p>
    <form class="form-inline" ng-submit="resetPassword()" name="form" autocomplete="off" novalidate="">
      <div class="form-group" style="width:100%;">
        <input id="reset_email" type="email" class="form-control" ng-model="reset_user.user.email" id="inputEmail3"
               placeholder="<%= t('reset.email') %>" style="width: calc(350px - 24px);" required>
      </div>
      <div class="form-group" style="margin:10px 0;width:100%;">
        <input id="reset_current_password" type="password" class="form-control"               ng-model="reset_user.user.current_password" placeholder="<%= t('reset.current_password') %>"
               style="width: calc(350px - 24px);" required>
      </div>
      <div class="form-group" style="margin:10px 0 0;width:100%;">
        <input id="reset_password" type="password" class="form-control" ng-model="reset_user.user.password"
               placeholder="<%= t('reset.new_password') %>" style="width: calc(350px - 24px);" required>
      </div>
      <div class="form-group" style="margin:10px 0;width:100%;">
        <input id="reset_password_confirmation" type="password" class="form-control"
               ng-model="reset_user.user.password_confirmation" placeholder="<%= t('reset.confirm_password') %>"
               style="width: calc(350px - 24px);" required>
      </div>
      <button id="reset" class="button pull-right" type="submit" value="<%= t('reset.title') %>"
              ng-click="loginError=false"
              ng-disabled="form.$invalid || reset_user.user.password != reset_user.user.password_confirmation"
              ng-class="form.$invalid || reset_user.user.password != reset_user.user.password_confirmation ? 'disabled' : ''">
        <%= t('reset.reset') %>
      </button>
    </form>
  </div>
</div>
