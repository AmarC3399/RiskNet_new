<div id="header-container">
  <h1 class="pull-left">User Management</h1>

  <div class="pull-right" style="margin:20px;">
    <a id="user-new" class="button" href="/users/new" required-user role="admin">
      <%= t('users.index.new_user') %></a>
  </div>
</div>
<div id="page-contents" class="no-footer with-header-container">
  <div class="section full-screen-table with-pagination">
    <div class="filter" ng-init="usersBase.filter.showTags = true"
         ng-class="{'filter-active': usersBase.filter.count > 0 && usersBase.filter.showTags}">
      <ul>
        <li class="search-form combo-search two-filter-buttons">                    
            <%= form_tag(users_path, method: "get") do %>
            <%= text_field_tag :search, nil, placeholder: 'Search', class:"inputwidth" %>
             <%= button_tag type: 'submit', class: "button postfix" do %>
             <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" style="width: 18px; margin: 2px;">
  <path fill="white" d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg>
            <% end %>
          <% end %>
        </li>
   <li id="users-clear-ordering" class="sorting-button">
          <a class="button" style="width: 25px; background: #4495D1;position: relative;" ng-click="resetOrder()" ng-disabled="usersBase.ordering.orderString === ''">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" style="width: 14px; position: relative; bottom: 5px;">
  <path fill="white" d="M182.6 137.4c-12.5-12.5-32.8-12.5-45.3 0l-128 128c-9.2 9.2-11.9 22.9-6.9 34.9s16.6 19.8 29.6 19.8H288c12.9 0 24.6-7.8 29.6-19.8s2.2-25.7-6.9-34.9l-128-128z"/></svg>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" style="width: 14px; transform: rotate(180deg);position: absolute;
    left: 21px;
    top: 13px;">
  <path fill="white" d="M182.6 137.4c-12.5-12.5-32.8-12.5-45.3 0l-128 128c-9.2 9.2-11.9 22.9-6.9 34.9s16.6 19.8 29.6 19.8H288c12.9 0 24.6-7.8 29.6-19.8s2.2-25.7-6.9-34.9l-128-128z"/></svg>
       </a>
       </li>
        <li id="user-filter" class="filter-button">
          <a class="button"
             ng-click="toggleSidebar('usersBase', usersBase.filter.sideBar);usersBase.filter.showTags = true" >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" style="width: 18px;">
  <path fill="white" d="M3.9 54.9C10.5 40.9 24.5 32 40 32H472c15.5 0 29.5 8.9 36.1 22.9s4.6 30.5-5.2 42.5L320 320.9V448c0 12.1-6.8 23.2-17.7 28.6s-23.8 4.3-33.5-3l-64-48c-8.1-6-12.8-15.5-12.8-25.6V320.9L9 97.3C-.7 85.4-2.8 68.8 3.9 54.9z"/></svg></a>
           </li>
         </ul>
             <a id="hideFilterTags" class="fa fa-angle-double-up"
         ng-click="usersBase.filter.showTags = !usersBase.filter.showTags"></a>
    </div>
    <div id="user-table" class="content-panel" style="width:100%;"
         ng-style="{top: usersBase.filter.count > 0 && usersBase.filter.showTags ? '95px' : '48px'}">
      <div class="table-wrapper" loading urls="/users">
        <multi-select selected="usersBase.selectedUsers" key="user" selected-all="usersBase.selectAllUsers">
          <table id="table-highlighted-contents"
                 class="table-highlighted-contents-list striped lined" float-thead="vars.floatTheadOptions"
                 ng-model="usersBase.users">
            <thead>
            <tr>
              <th><%= t('users.index.name') %></th>
              <th><%= t('users.index.enabled') %></th>
              <th><%= t('users.index.user_group') %></th>
              <th><%= t('users.index.email') %></th>
              <th><%= t('users.index.owner_type') %></th>
              <th><%= t('users.index.owner_name') %></th>
              <th><%= t('users.index.last_visit_date') %></th>
              <th><%= t('users.index.registration_date') %></th>
            </tr>
            </thead>
            <tbody>
            <tr dir-paginate="user in usersBase.users | itemsPerPage: usersBase.pagination.usersPerPage"
                id="user{{$index}}" bindonce
                total-items="usersBase.pagination.totalUsers"
                current-page="usersBase.pagination.currentPage"
                ng-class="(user.enabled === true) ? 'highlighted-green' : 'highlighted-red'">
              <td>client admin</td>
              <td>true</td>
              <td>Admin</td>
              <td >client_admin@aicorp.com</td>
              <td>Client</td>
              <td>Unregistered Member</td>
              <td>10/03/23 14:24</td>
              <td>13/07/23 14:42</td>
            </tr>
            <!-- <tr ng-if="usersBase.users.length < 1">
              <td colspan=8><%= t('search.no_results') %></td>
            </tr> -->
            </tbody>
          </table>
        </multi-select>
      </div>
    </div>
  </div>

  <div class="full-page-pagination">
    <dir-pagination-controls boundary-links="true" on-page-change="changePage(newPageNumber)" max-size="6"
                             template-url="/templates/layouts/dirPagination.tpl.html"></dir-pagination-controls>
  </div>
  <div id="page_stats" class="alongside-pagination micro-text"><%= t('pagination.displaying') %>
    usersBase.display.from - usersBase.display.to <%= t('pagination.of') %> usersBase.pagination.totalUsers
  </div>
  <div class="action-bar primary">
    <ul>
      <li>
        <a id="user-edit" ng-click="(checkOneSelected() === false ? $event.preventDefault() : '')"
           href="/users/{{usersBase.selectedUser.id}}" required-user role="admin"
           class="button" ng-disabled="checkOneSelected() === false"
           ng-class="checkOneSelected() === false ? 'disabled' : ''"><%= t('users.index.edit')%></a>
      </li>
      <li>
        <a id="user-disable"
           ng-click="checkSelection() === false || checkState() === false || openConfirmation('block')" required-user
           role="admin" class="button" ng-disabled="checkSelection() === false || checkState() === false"
           ng-class="checkSelection() === false || checkState() === false ? 'disabled' : ''"><%=
          t('users.index.disable')%></a>
      </li>
      <li>
        <a id="user-enable"
           ng-click="checkSelection() === false || checkState() === true || openConfirmation('unblock')" required-user
           role="admin" class="button"
           ng-disabled="checkSelection() === false   || checkState() === true"
           ng-class="checkSelection() === false || checkState() === true ? 'disabled' : ''"><%=
          t('users.index.enable')%></a>
      </li>
    </ul>
  </div>
</div>
